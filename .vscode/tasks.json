{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-G",
                "Ninja",
                "-S",
                ".",
                "-DCMAKE_BUILD_TYPE=Debug",
                // "-G",
                // "Ninja",
                "-DCMAKE_TOOLCHAIN_FILE=${env:VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            ],
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
                // "--",
                // "-j",
                // "${env:NUMBER_OF_PROCESSORS}"
            ],
            "problemMatcher": [],
            "group": "build",
            "dependsOn": [
                "CMake Configure"
            ]
        }
    ]
}